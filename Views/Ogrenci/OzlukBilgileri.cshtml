@model Zeun.Web.Models.OgrenciOzlukBilgileriViewModel

@{
    Layout = "/Views/Shared/_OgrenciLayout.cshtml";
}


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <title>Öğrenci Özlük Bilgileri</title>
    <style>
        .info-box {
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
        }

        .info-title {
            font-size: 24px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 15px;
            text-transform: uppercase;
        }

        .info-content {
            margin-bottom: 10px;
        }

            .info-content img {
                max-width: 100%;
                height: auto;
                border-radius: 50%;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            }

        .info-box-blue {
            background-color: #7795aa;
            border: 1px solid #54778a;
        }

        .info-box-brown {
            background-color: #b88882;
            border: 1px solid #a2736f;
        }

        .info-box-green {
            background-color: #829a8c;
            border: 1px solid #6c7c70;
        }

        .info-box i {
            font-size: 24px;
            margin-right: 8px;
        }
    </style>
</head>

<body>

    <div class="container mt-5">
        <h2 class="text-center mb-4">Öğrenci Özlük Bilgileri</h2>

        
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="info-box info-box-blue">
                    <h3 class="info-title"><i class="fas fa-user"></i> Öğrenci Bilgileri</h3>
                    <div class="info-content">
                      
                        <p><strong><i class="fas fa-user"></i> Adı Soyadı:</strong>@Model.Ogrenci.Adi @Model.Ogrenci.Soyadi</p>

                        <p><strong><i class="fas fa-id-card"></i> T.C. Kimlik No:</strong> @Model.Ogrenci.TckimlikNo</p>
                    </div>

                    <p><strong><i class="fas fa-calendar-alt"></i> Doğum Tarihi:</strong> @Model.Ogrenci.DogumTarihi</p>
                </div>

                <div class="info-box info-box-brown">
                    <h3 class="info-title"><i class="fas fa-building"></i> Kurumsal Bilgiler</h3>
                    <div class="info-content">
                        <p><strong><i class="fas fa-book"></i> Bölüm:</strong>@Model.Bolum.BolumAdi</p>
                        <p><strong><i class="fas fa-id-badge"></i> Öğrenci No:</strong> @Model.Ogrenci.OgrenciNo</p>
                        <p><strong><i class="fas fa-calendar"></i> Kayıt Tarihi:</strong> @Model.Ogrenci.KayitTarihi</p>
                        <p><strong><i class="fas fa-check"></i> Durumu:</strong> @Model.OgrenciDurum.OgrenciDurumu</p>
                        <p><strong><i class="fas fa-calendar-times"></i> Ayırılma Tarihi:</strong> -</p>

                    </div>
                </div>

                <div class="info-box info-box-green">
                    <h3 class="info-title"><i class="fas fa-envelope"></i> İletişim Bilgileri</h3>
                    <div class="info-content">
                        <p><strong><i class="fas fa-home"></i> Adres:</strong> @Model.Ogrenci.Adres</p>
                        <p><strong><i class="fas fa-phone"></i> Telefon Numarası:</strong> @Model.Ogrenci.TelefonNumarasi</p>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

