@model Zeun.Web.Models.OgretimElemaniViewModel
@{
    Layout = "~/Views/Shared/_OgretimELemaniLayout.cshtml";
}

<head>
    
    <title>Öğrenci Danışmanlık İşlemleri</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 20px;
        }

        h2 {
            margin-bottom: 20px;
        }

        table {
            width: 80%;
            border-collapse: collapse;
            margin-bottom: 40px;
        }

        th,
        td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 12px;
            font-size: 14px;
        }

        th {
            background-color: #7795aa;
            color: white;
        }

        .highlight {
            background-color: #e0f7fa;
            cursor: pointer;
        }

        .btn {
            padding: 8px 16px;
            cursor: pointer;
            border: none;
            border-radius: 4px;
            font-size: 14px;
            margin-right: 5px;
        }

        .btn-primary {
            background-color: #598cde;
            color: white;
        }

        .btn-danger {
            background-color: #d36257;
            color: white;
        }

        form {
            margin-top: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h3 {
            margin-bottom: 10px;
        }

        label {
            margin-bottom: 5px;
        }

        input {
            padding: 8px;
            margin-bottom: 10px;
            width: 100%;
            box-sizing: border-box;
        }

        .btn-success {
            background-color: #4b935e;
            color: white;
        }
    </style>
</head>

<body>

    <h2>Öğrenci Danışmanlık İşlemleri</h2>

    <table>
        <thead>
            <tr class="highlight">
                <th>Bölüm</th>
                <th>Öğrenci Adı</th>
                <th>Öğrenci Soyadı</th>
                <th>Öğrenci No</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Bilgisayar Mühendisliği</td>
                <td>Ahmet</td>
                <td>Yılmaz</td>
                <td>12345</td>
                <td>
                    <button class="btn btn-danger">Öğrenci Çıkar</button>
                </td>
            </tr>
            <!-- Diğer öğrenciler ve bölümler buraya eklenebilir -->
        </tbody>
    </table>

    <form>
        <h3>Yeni Öğrenci Ekle</h3>
        <label for="bolum">Bölüm:</label>
        <input type="text" id="bolum" name="bolum" required>
        <label for="ad">Öğrenci Adı:</label>
        <input type="text" id="ad" name="ad" required>
        <label for="soyad">Öğrenci Soyadı:</label>
        <input type="text" id="soyad" name="soyad" required>
        <label for="no">Öğrenci No:</label>
        <input type="text" id="no" name="no" required>
        <button class="btn btn-success" type="submit">Öğrenci Ekle</button>
    </form>

</body>

</html>